{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        // $('#navbar').singlePageNav({
        //     offset: $('#header').outerHeight(),
        //     filter: ':not(.external)',
        //     updateHash: true,
        //     currentClass: 'active'
        // });
        </script>
    {% endif %}
    <script>
    // smooth scroll internal links
    $('a[href^="#"]').on('click', function(event) {
        var target = $(this.getAttribute('href'));
        if( target.length ) {
            event.preventDefault();
            container= $("#sb-site");
            container.animate({
                scrollTop: target.offset().top - container.offset().top + container.scrollTop()
            });
        }
    });
    </script>
{% endblock %}

{% block header_navigation %}
    {% if show_onpage_menu %}
        {% include 'partials/organisms/navigation-onpage.html.twig' %}
    {% else %}
        {{  parent() }}
    {% endif %}
{% endblock %}

{% block slidebar_navigation %}
    {% include 'partials/organisms/navigation-onpage.html.twig' with {
        is_side_bar: true
    }%}
{% endblock %}

{% block content %}
    {{ page.content }}
    {% for module in page.collection() %}
        {% if not module.header.disabled %}
            <div id="{{ _self.pageLinkName(module.menu) }}" class="section-anchor">&nbsp;</div>
            {{ module.content }}
        {% endif %}
    {% endfor %}
{% endblock %}